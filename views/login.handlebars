<div class="container">
    <div class="card login-card">
        <div class="card-head login-head d-flex align-items-start">
            <h1>Login</h1>
            <img class="github-icon" src="https://img.icons8.com/small/64/ffffff/github.png"/>
            <img class="google-icon" src="https://img.icons8.com/ios-glyphs/60/ffffff/google-logo.png"/>
        </div>
        <div class="card-body login-body d-flex align-items-center justify-content-center">
            
            <img class="person-icon" src="https://img.icons8.com/pastel-glyph/64/ffffff/person-male--v3.png"/>
            <img class="lock-icon" src="https://img.icons8.com/ios-glyphs/60/ffffff/lock--v1.png"/>

            <form method="post" class="card login-form text-white bg-transparent">
                
                <input id="username" type="text" placeholder="Enter Username" 
                style="font-size: 40px; font-family:'Poppins', sans-serif; text-align: center;" name="uname" required>
                <input id="password" type="password" placeholder="Enter Password" 
                style="font-size: 40px; font-family:'Poppins', sans-serif; text-align: center;"  name="psw" required>
                
                <button class="login-button" type="submit">Login</button>
            </form>
        </div>
    </div>
</div>