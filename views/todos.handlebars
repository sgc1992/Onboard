<div class="container todo-container ">
    <h1 class="d-flex justify-content-start">To-Do List</h1>
    <!-- dynamically add in js -->
    <div class="container todo-cards-container">
        <!-- user's to do that saves to db with button that fills when finished -->
    </div>
    <!-- add to do's button that triggers a add todo section-->
    <div class="container button-container">
        <button type="button" class="btn btn-todo">
            <img src="https://img.icons8.com/ios-glyphs/96/ffffff/plus-math.png"/>
            <br>
        Add Todos
        </button>
    </div>
    
    <!-- add to dos card-->
    <div class="card add-todo-card">
        <!-- form with user input -->
        <div class="form-group user-todo-input">
            <input type="input" class="form-control" id="user-todo" placeholder="Enter task">
        </div>
        <!-- add todo button -->
        <button type="button" class="btn btn-dark btn-add-todo">
            <!-- plus icon -->
            <img src="https://img.icons8.com/ios-glyphs/48/ffffff/plus-math.png"/>
            Add Todo
        </button>
    </div>
</div>

<!-- script file for todos -->
<script src="public/js/todo.js"></script>